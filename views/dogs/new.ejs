<%layout('layouts/boilerplate')%>
<style>


</style>

<body class="container mt-4"> 

    
    <div class="row mt-4 justify-content-center">
        <div class="col-md-6"> 

            <form action="/dogs/add" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name<span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="birth_date" class="form-label">Birth Date</label>
                        <input type="date" class="form-control" id="birth_date" name="birth_date">
                    </div>

                    <div class="col-md-6">
                        <label for="age" class="form-label">Age</label>
                        <input type="number" class="form-control" id="age" name="age" step="0.1">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="entry_date" class="form-label">Entry Date<span class="text-danger">*</span></label>
                    <input type="date" class="form-control" id="entry_date" name="entry_date" required>
                </div>

                <div class="mb-3">
                    <label for="entry_type" class="form-label">Entry type</label>
                    <select name="entry_type" id="entry_type" class="form-control">
                        <% entryTypes.forEach((type) => { %>
                            <option value="<%= type.toLowerCase() %>"><%= type %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="unit" class="form-label">Unit</label>
                    <select name="unitId" id="unit" class="form-control">
                        <% units.forEach((unit) => { %>
                            <option value="<%= unit.id %>"><%= unit.building%><%= unit.number %></option>
                        <% }); %>
                    </select>
                </div>

                <div class="mb-3">
                    <input type="number" class="form-control" id="shelterId" name="shelterId" value="<%= currentUser.shelterId %>" hidden>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Add Dog</button>
                </div>

            </form>
        </div>
    </div>


</body>
